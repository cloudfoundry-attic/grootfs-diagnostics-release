#!/bin/bash

dstate_counter() {
  currenttime=$(date +%s)
  count=$(ps axho state | grep 'D' | wc -l)

  /var/vcap/packages/metatron/bin/metatron --metron-endpoint="127.0.0.1:<%= p('grootfs-diagnostics.dropsonde_port') %>" \
    --prefix="grootfs" \
    --name="dstate-processes" \
    --value=$count
}
